{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
    "options": {
        "env": {
             "REMOTE_IP": "192.168.137.252",
             "BIN_FILE": "test_thread"
        }
    },
	"tasks": [
		{
			"label": "Copy",
			"type": "shell",
            "command": "scp ${BIN_FILE} root@${REMOTE_IP}:/home/root && ssh root@${REMOTE_IP} cd /home/root && chmod 744 ${BIN_FILE}"
        },
        {
            "label": "Start gdbserver",
            "type": "shell",
            "command": "ssh",
            "args": [
              /* "root@${REMOTE_IP}",
                "gdbserver localhost:4000 ${BIN_FILE}"*/
                "root@192.168.137.252",
                "gdbserver localhost:4000 test_thread"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "group": "build",
            "detail": "Starts the gdbserver and waits for success",
            "isBackground": true,
            "problemMatcher": {
                "pattern": [
                    {
                        "regexp": ".",
                        "file": 1,
                        "location": 2,
                        "message": 3
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*Process*",
                    "endsPattern": "^.*Listening*"
                }
            }
        },
		{
			"label": "BUILD",
			"type": "shell",
			"command": "embedded_command_shell.sh make",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Clean",
			"type": "shell",
			"command": "make clean"
		}
	]
}


